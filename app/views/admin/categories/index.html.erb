<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th> Category</th>
          <th> Number of Products </th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category|%>
          <% category_id = category.id%>
          <%= render 'category', category: category, amount: Product.where(category_id: category_id).count %>
        <%end%>
      </tbody>
    </table>

  </div>

</section>
